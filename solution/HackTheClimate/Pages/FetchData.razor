@page "/fetchdata"

@using HackTheClimate.Data
@inject LawOrPolicyService LawOrPolicyService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (lawsAndPolicies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lawOrPolicy in lawsAndPolicies)
            {
            <tr>
                <td>@lawOrPolicy.Title</td>
                <td>@lawOrPolicy.Geography</td>
                <td>@lawOrPolicy.Description</td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<LawOrPolicy> lawsAndPolicies;

    protected override async Task OnInitializedAsync()
    {
        lawsAndPolicies = LawOrPolicyService.GetLawsAndPolicies();
    }
}
